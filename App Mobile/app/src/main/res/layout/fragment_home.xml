<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--Tiêu đề-->
    <TextView
        android:id="@+id/titleText"
        android:text="ProReadApp"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_margin="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="707dp"
        android:layout_below="@id/titleText"
        android:layout_marginTop="-19dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp">

            <!--Hàng các nút Yêu Thích, Xem Nhiều, Thịnh Hành-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="4">

                <!--Yêu thích-->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="6dp"
                    android:layout_marginEnd="6dp"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:background="@drawable/bg_layout_oval_xam">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/love_svgrepo_com"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="Yêu Thích"
                        android:textSize="12sp" />
                </LinearLayout>

                <!--Xem nhiều-->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="6dp"
                    android:layout_marginEnd="6dp"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:background="@drawable/bg_layout_oval_xam">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/eye_svgrepo_com"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="Xem Nhiều"
                        android:textSize="12sp" />
                </LinearLayout>

                <!--Thịnh hành-->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="6dp"
                    android:layout_marginEnd="6dp"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:background="@drawable/bg_layout_oval_xam">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/trending_up_svgrepo_com"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="Thịnh Hành"
                        android:textSize="12sp" />
                </LinearLayout>
            </LinearLayout>

            <!-- Mục Mới Nhất -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="20dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Mới Nhất"
                    android:textStyle="bold"
                    android:textSize="16sp" />

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_arrow_right" />
            </LinearLayout>

            <!-- Mục Mới Cập Nhật -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="20dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Mới Cập Nhật"
                    android:textStyle="bold"
                    android:textSize="16sp" />

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_arrow_right" />
            </LinearLayout>

            <!-- Mục Truyện đã hoàn thành -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="20dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Truyện đã hoàn thành"
                    android:textStyle="bold"
                    android:textSize="16sp" />

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_arrow_right" />
            </LinearLayout>



            <!--Các nút truyện full-->
            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:columnCount="2">

                <Button
                    style="?android:attr/buttonBarButtonStyle"
                    android:text="Truyện mới Cập Nhật" />

                <Button
                    style="?android:attr/buttonBarButtonStyle"
                    android:text="Truyện yêu Thích" />

                <Button
                    style="?android:attr/buttonBarButtonStyle"
                    android:text="Truyện xem Nhiều" />
            </GridLayout>

            <!--Khám Phá-->
            <TextView
                android:text="Hãy Thử Khám Phá"
                android:textStyle="bold"
                android:layout_marginTop="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:divider="?android:dividerHorizontal"
                android:showDividers="middle"
                android:dividerPadding="8dp">

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Bộ lọc truyện nâng cao"
                    android:backgroundTint="#F2F2F2"
                    android:textColor="#000000"
                    android:padding="12dp"
                    android:elevation="2dp" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Đánh giá truyện bởi bạn đọc TYT"
                    android:backgroundTint="#F2F2F2"
                    android:textColor="#000000"
                    android:padding="12dp"
                    android:elevation="2dp" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Bộ sưu tập truyện hay mới chia sẻ"
                    android:backgroundTint="#F2F2F2"
                    android:textColor="#000000"
                    android:padding="12dp"
                    android:elevation="2dp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
